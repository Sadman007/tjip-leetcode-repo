class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        unordered_set<int> s;
        int n = nums.size();
        for(int i = 0; i<n; i++)
            s.insert(nums[i]);
        int ans = 0;
        
        for(int i = 0; i < n; i++)
        {
            if(s.find(nums[i] - 1) != s.end())
                continue;
            else
            {
                int count = 0;
                int current = nums[i];
                while(s.find(current) != s.end())
                {
                    count++;
                    current++;
                }
                ans = max(ans,count);
            }
        }
        return ans;
    }
};
